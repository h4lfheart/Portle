<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:material="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:controls1="clr-namespace:Portle.Controls"
             xmlns:extensions="clr-namespace:Portle.Extensions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Portle.Controls.IconText">
    <StackPanel Orientation="Horizontal">
        <material:MaterialIcon Kind="{Binding Icon, RelativeSource={RelativeSource AncestorType=controls1:IconText}}"
               Width="{Binding IconSize, RelativeSource={RelativeSource AncestorType=controls1:IconText}}"
               Height="{Binding IconSize, RelativeSource={RelativeSource AncestorType=controls1:IconText}}"
               RenderOptions.BitmapInterpolationMode="HighQuality" Margin="{extensions:Space 0, 0, 1, 0}"
               VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=controls1:IconText}}" VerticalAlignment="Center"/>
    </StackPanel>
</UserControl>
